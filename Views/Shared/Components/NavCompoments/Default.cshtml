@model IEnumerable<WebsiteTMDT.Areas.Admin.Models.EF.ProductCategory>
@{
    var selectedCategory = ViewBag.SelectedCategory as WebsiteTMDT.Areas.Admin.Models.EF.ProductCategory;
}
<div class="col-lg-12 text-center">
    <div class="breadcrumb__links">
        <div class="breadcrumb__option">
            <a asp-action="Index" asp-area="User" asp-controller="Home">Trang chủ</a> /
            <a asp-action="Index" asp-controller="Shop" asp-route-categoryAlias="">Cửa hàng</a>
            @if (selectedCategory != null)
            {
                <a asp-action="Index" asp-controller="Shop" asp-route-categoryAlias="@selectedCategory.Alias">/ @selectedCategory.Title</a>
            }
        </div>
    </div>
</div>
