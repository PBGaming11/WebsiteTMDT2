
@model X.PagedList.IPagedList<WebsiteTMDT.Models.CartItem>
@using X.PagedList;
@using X.Web.PagedList

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá tiền</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="data:image/png;base64,@item.ImageUrl" alt="@item.ProductName">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.ProductName</h6>
                                            <h5>@item.Price.ToString("N0") Đ</h5>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input type="text" value="@item.Quantity">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">@item.Price.ToString("N0") Đ</td>
                                    <td class="cart__close"><a href="#"><i class='bx bx-x'></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-12 text-right">
                        @Html.PagedListPager(Model, page => Url.Action("Cart", new { page }))
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__total">
                    <h6>Tổng tiền giỏ hàng</h6>
                    <ul>
                        <li>Tổng tiền <span>@Model.Sum(item => item.Price * item.Quantity).ToString("N0") Đ</span></li>
                    </ul>
                    <a asp-action="Checkout" asp-controller="Order" class="primary-btn">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</section>