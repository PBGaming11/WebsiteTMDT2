@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<WebsiteTMDT.Models.CartItem>
<style>
    /* Title Styles */
    .checktitle {
        font-size: 2.5rem;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 10px;
    }

    .checktitle2 {
        font-size: 1.75rem;
        font-weight: bold;
        color: #28a745;
        margin-top: 20px;
        margin-bottom: 15px;
    }

    /* Information Paragraph */
    .checkoutinfo {
        font-size: 1.2rem;
        color: #6c757d;
        margin-bottom: 20px;
    }

    /* Horizontal Rule */
    hr {
        border: 1px solid #007bff;
        margin: 20px 0;
    }

    /* Center Alignment */
    .text-center {
        text-align: center;
    }    
    /*////////////////*/
    .checkoutform {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .checkoutlable label {
        font-weight: bold;
        margin-bottom: 0.5rem;
        display: block;
        color: #333;
    }

    .form-control {
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 0.75rem 1.25rem;
        font-size: 1rem;
        transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        margin-bottom: 1.5rem;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
            outline: 0;
        }

    .btn {
        padding: 0.5rem 1rem; /* Smaller padding */
        font-size: 0.875rem; /* Smaller font size */
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
    }

    /* Button color and hover effects */
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    /* Optional: Center the button */
    .btn-block {
        width: 250px;
        display: flex;
        justify-content: center;
        margin-top: 2rem; /* Adjust spacing above the button */
    }
    /*////////////////*/
    .checkoutproduct {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-left: 50px;
    }

    .checktitle3 {
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
    }

    .checktitle4 {
        font-size: 22px;
        color: #007bff;
        margin-bottom: 20px;
    }

    .checkout-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .checkout-table td {
            padding: 8px 12px;
            border-bottom: 1px solid #ddd;
            font-size: 16px;
            color: #555;
        }

        .checkout-table .total-row {
            font-weight: bold;
            background-color: #f1f1f1;
        }

    .empty-cart {
        text-align: center;
        padding: 20px;
        font-size: 16px;
        color: #666;
    }

        .empty-cart a {
            color: #007bff;
            text-decoration: none;
        }

            .empty-cart a:hover {
                text-decoration: underline;
            }

</style>
<section class="shopping-cart spad">
    <div style="margin-bottom: 40px;" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="checktitle">Thanh toán</h1>
                <p class="checkoutinfo">Bạn hãy kiểm tra lại thông tin đơn hàng!</p>
            </div>
        </div>
        <hr />
        <h3 class="checktitle2">Thông tin khách hàng</h3>
            <div class="row">
                <div class="col-lg-8 checkoutform">
                    <div class="form-group checkoutlable">
                        <label>Họ tên khách hàng</label>
                        <input type="text" name="CustomerName" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group checkoutlable">
                        <label>Số điện thoại</label>
                        <input type="text" name="Phone" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group checkoutlable">
                        <label>Địa chỉ</label>
                        <input type="text" name="Address" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group checkoutlable">
                        <label>Email</label>
                        <input type="text" name="Email" class="form-control" autocomplete="off" />
                    </div>
                    <div class="form-group checkoutlable">
                        <label>Hình thức thanh toán</label>
                        <select class="form-control" name="Payment">
                            <option value="1">Giao hàng thanh toán</option>
                            <option value="2">Thanh toán qua ngân hàng</option>
                            <option value="3">Thanh toán qua momo</option>
                            <option value="4">Thanh toán qua VNpay</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-success">Đặt hàng</button>
                    </div>
                </div>
            <div class="col-lg-3 checkoutproduct">
                <h4 class="checktitle3">Giỏ hàng</h4>
                <h2 class="checktitle4">Tổng sản phẩm: @Model.Count()</h2>
                @if (Model != null && Model.Any())
                {
                    <table class="checkout-table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Price.ToString("N0") Đ</td>
                            </tr>
                        }
                        <tr class="total-row">
                            <td>Tổng tiền</td>
                            <td>@Model.Sum(item => item.Price * item.Quantity).ToString("N0") Đ</td>
                        </tr>
                    </table>
                }
                else
                {
                    <div class="empty-cart">
                        <p>Không có sản phẩm trong thanh toán! Mời bạn vào trang <a asp-action="Index" asp-controller="Shop">cửa hàng</a></p>
                    </div>
                }
            </div>
    </div>
</section>