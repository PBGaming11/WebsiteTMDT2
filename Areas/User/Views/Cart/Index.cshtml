@model X.PagedList.IPagedList<WebsiteTMDT.Models.CartItem>
@using X.PagedList;
@using X.Web.PagedList

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <br />
                    <table>
                        @if (Model != null && Model.Any())
                        {
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng</th>
                                    <th>Giá tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <img src="data:image/png;base64,@item.ImageUrl" alt="@item.ProductName">
                                            </div>
                                            <div class="product__cart__item__text">
                                                @if(item.Issale == false)
                                                {
                                                    <h6>@item.ProductName</h6>
                                                    <h5>@item.Price.ToString("N0") Đ</h5>
                                                }else
                                                {
                                                    <h4 style="color: red">Sale</h4>
                                                    <h6>@item.ProductName</h6>
                                                    <h5>@item.Price.ToString("N0") Đ</h5>
                                                }

                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    <input type="text"
                                                           value="@item.Quantity"
                                                           min="1"
                                                           data-id="@item.ProductId"
                                                           class="cart-item-quantity">
                                                </div>
                                            </div>
                                        </td>

                                        <td class="cart__price">@item.Price.ToString("N0") Đ</td>
                                        <td class="cart__close">
                                            <a href="javascript:void(0);" class="remove-from-cart" data-id="@item.ProductId"><i class='bx bx-x'></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        }
                        else
                        {
                            <tr>
                                <th>
                                    <p>Không có sản phẩm trong giỏ hàng! Mời bạn vào trang <a asp-action="Index" asp-area="User" asp-controller="Shop">cửa hàng</a> để mua hàng</p>
                                </th>
                            </tr>
                        }
                    </table>
                </div>
                <div class="row">
                    <div class="col-12 text-right">
                        @Html.PagedListPager(Model, page => Url.Action("Cart", new { page }))
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>Mã quà tặng</h6>
                    <form id="applyVoucherForm" method="post" action="/User/Cart/ApplyVoucher">
                        <input type="text" name="voucherCode" placeholder="Mã Coupon" required>
                        <button type="submit">Áp dụng</button>
                    </form>
                </div>
                <div class="cart__total">
                    <h6>Tổng tiền giỏ hàng</h6>
                    <ul>
                        <li>Tổng tiền <span id="totalAmounts">@Model.Sum(item => item.Price * item.Quantity).ToString("N0") Đ</span></li>
                        <li>Giảm giá: <span id="discountAmount">0 đ</span></li>
                        <li>Tổng sau giảm: <span id="finalAmount">@Model.Sum(item => item.Price * item.Quantity).ToString("N0") Đ</span></li>
                    </ul>
                    </ul>
                    <a href="@Url.RouteUrl("thanhtoan")" class="primary-btn">Thanh toán</a>
                </div>
            </div>

        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#applyVoucherForm").submit(function (event) {
            event.preventDefault(); // Ngăn form load lại trang

            $.ajax({
                type: "POST",
                url: $(this).attr("action"),
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        alert("Voucher áp dụng thành công! Giảm giá: " + response.discountValue + "%.");
                        // Cập nhật giảm giá và tổng tiền trên giao diện
                        $("#discountAmount").text(response.discountValue + "%");

                        // Cập nhật lại tổng tiền sau khi áp dụng giảm giá
                        let totalAmount = parseInt($("#totalAmounts").text().replace(/\D/g, ''));
                        let discountAmount = totalAmount * response.discountValue / 100;
                        $("#finalAmount").text((totalAmount - discountAmount).toLocaleString() + " đ");
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Có lỗi xảy ra khi áp dụng voucher.");
                }
            });
        });

    });

</script>
