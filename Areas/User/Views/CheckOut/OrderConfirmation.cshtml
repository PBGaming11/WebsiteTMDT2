@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<section class="order-confirmation spad">
    <div class="container">
        <h2>Đặt hàng thành công!</h2>
        @if (TempData["OrderCode"] != null)
        {
            <p>Mã đơn hàng của bạn là: <strong>@TempData["OrderCode"]</strong></p>
        }
        else
        {
            <p>Không tìm thấy mã đơn hàng. Vui lòng kiểm tra lại.</p>
        }
    </div>
</section>
