@{
    ViewData["Title"] = "Trang quản lý banner";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<WebsiteTMDT.Areas.Admin.Models.EF.Banner>
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="../Admin/Banner" class="nav-link">Banner</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý banner</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Banner</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Title</h3>

            <div class="card-tools">
                <a href="~/Admin/Banner/Add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SellectAll" /></th>
                        <th>STT</th>
                        <th>Tên banner</th>
                        <th>Hình ảnh</th>
                        <th>Hiển thị</th>
                        <th>Hiển thị phụ</th>
                        <th style="width:15opx;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1; //code sắp xếp số tứ tự theo page
                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strSingle = item.IsSingle ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td>
                                    @if (item.Image != null)
                                    {
                                        <img width="50" src="data:image/png;base64,@item.Image" />
                                    }
                                    else
                                    {
                                        <a>No Image</a>
                                    }
                                </td>
                                <td>
                                    <a href="#" data-id="@item.Id" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="#" data-id="@item.Id" class="btnSingle">@Html.Raw(strSingle)</a>
                                </td>
                                <td>
                                    <a href="/Admin/Banner/Edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>

                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <th colspan="4">Không có bản ghi nào!!!</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts {
    <script>
        $('body').on('click', '#btnDeleteAll', function () {
            var id = "";
            var checkbox = $(this).parents('.card').find('tr td input:checkbox');// chọn checkbox
            var i = 0;
            checkbox.each(function () {
                if (this.checked) {
                    checkbox.attr('selected', 'checked');//set tất cả thành checked
                    var _id = $(this).val();
                    if (i === 0) {
                        id += _id;
                    } else {
                        id += "," + _id;
                    }
                    i++;
                } else {
                    checkbox.attr('selected', '');
                }
            })
            if (id.length > 0) {
                var conf = confirm('Bạn có muốn xóa hay không?')
                if (conf == true) {
                    $.ajax({
                        url: '/Admin/Banner/DeleteAll',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                location.reload();
                            }
                        }

                    });
                }
            }
        });
        $(document).ready(function () {
            //js chọn tất cả
            $('body').on('change', '#SellectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');// chọn checkbox
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');//set tất cả thành checked
                    } else {
                        checkbox.attr('selected', '');
                    }
                })
            });
            //Js xóa tin tức
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa không ?');
                if (conf == true) {
                    $.ajax({
                        url: '/Admin/Banner/Delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }

                    });
                }
            });
            // Toggle IsActive
            $('.btnActive').on('click', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                var $this = $(this);

                $.post('/Admin/Banner/IsActive', { id: id }, function (response) {
                    if (response.success) {
                        // Update the icon
                        if (response.isActive) {
                            $this.html("<i class='fa fa-check text-success'></i>");
                        } else {
                            $this.html("<i class='fas fa-times text-danger'></i>");
                        }

                        // Ensure IsSingle is updated
                        var $single = $this.closest('tr').find('.btnSingle');
                        if (response.isActive) {
                            $single.html("<i class='fas fa-times text-danger'></i>");
                        }
                    }
                });
            });

            $(document).ready(function () {
                // Toggle IsSingle
                $('.btnSingle').on('click', function (e) {
                    e.preventDefault();
                    var id = $(this).data('id');
                    var $this = $(this);

                    $.post('/Admin/Banner/IsSingle', { id: id }, function (response) {
                        if (response.success) {
                            // Update the icon
                            if (response.isSingle) {
                                $this.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                $this.html("<i class='fas fa-times text-danger'></i>");
                            }

                            // Ensure IsActive is updated
                            var $active = $this.closest('tr').find('.btnActive');
                            if (response.isSingle) {
                                $active.html("<i class='fas fa-times text-danger'></i>");
                            }

                            // Nếu có unsetItemId, cập nhật lại biểu tượng của item đó
                            if (response.unsetItemId) {
                                $('#trow_' + response.unsetItemId + ' .btnSingle').html("<i class='fas fa-times text-danger'></i>");
                            }
                        }
                    });
                });
            });
        });
    </script>
}
