@model WebsiteTMDT.Areas.Admin.Models.EF.voucher
@{
    ViewData["Title"] = "Chỉnh Sửa Voucher";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="../Admin/Voucher" class="nav-link">Voucher</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Blank Page</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Chỉnh Sửa Voucher</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chỉnh Sửa Voucher</h3>

            <div class="card-tools">
            </div>
        </div>
        <div class="card-body">
            <form asp-area="Admin" asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label>Mã Voucher</label>
                    <input asp-for="Code" class="form-control" disabled />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Giá Trị Giảm (%)</label>
                    <input asp-for="DiscountValue" class="form-control" disabled />
                    <span asp-validation-for="DiscountValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Số Lượng</label>
                    <input asp-for="Quantity" class="form-control" disabled />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Ngày Bắt Đầu</label>
                    <input asp-for="StartDate" type="date" class="form-control" disabled />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Ngày Kết Thúc</label>
                    <input asp-for="EndDate" type="date" class="form-control" disabled />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Trạng Thái</label>
                    <p class="form-control">@(Model.IsActive ? "Kích hoạt" : "Vô hiệu")</p>
                </div>

                <a asp-action="Index" asp-area="Admin" asp-controller="Voucher" class="btn btn-danger">Trở về</a>
            </form>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

