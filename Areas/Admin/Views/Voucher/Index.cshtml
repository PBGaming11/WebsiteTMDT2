@model IEnumerable<WebsiteTMDT.Areas.Admin.Models.EF.voucher>

@{
    ViewData["Title"] = "Quản lý Voucher";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="../Admin/Voucher" class="nav-link">Voucher</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách Voucher</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh sách Voucher</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="card-tools">
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mã Voucher</th>
                        <th>Giá trị giảm</th>
                        <th>Số lượng</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var voucher in Model)
                    {
                        <tr>
                            <td>@voucher.Code</td>
                            <td>@voucher.DiscountValue.ToString("0")%</td>
                            <td>@voucher.Quantity</td>
                            <td>@voucher.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@voucher.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@(voucher.IsActive ? "Kích hoạt" : "Vô hiệu")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Voucher", new { area = "Admin", id = voucher.Id })" class="btn btn-primary">Chi tiết</a>
                                <a href="#" data-id="@voucher.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts {
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa không ?');
                if (conf == true) {
                    $.ajax({
                        url: '/Seller/Voucher/Delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }

                    });
                }
            });
        });
    </script>
}>